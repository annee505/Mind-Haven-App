<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/stepNumberTextView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/step_number_background"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="1" />

    <TextView
        android:id="@+id/stepDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:textColor="@color/text_medium_brown"
        android:textSize="14sp"
        tools:text="Find a comfortable seated position with your back straight." />

</LinearLayout>